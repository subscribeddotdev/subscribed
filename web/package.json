{
  "name": "subscribed-webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:css": "npx stylelint '**/*.css'",
    "fmt": "npx prettier --check .",
    "fmt:fix": "npx prettier -w .",
    "init": "mkdir .openapi",
    "test:unit": "jest",
    "test:unit:ci": "jest --ci",
    "e2e:server": "cd ../server; docker compose up -d",
    "e2e:wait-server": "./waitfor.sh",
    "e2e": "playwright test",
    "e2e:codegen": "npx playwright codegen",
    "type-check": "tsc --noEmit",
    "openapi": "npx @openapitools/openapi-generator-cli generate -i ../server/api//openapi.yml -g typescript-axios -o ./src/common/libs/backendapi/client"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-form": "^0.1.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/themes": "^3.1.1",
    "@remixicon/react": "^4.2.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.12",
    "eslint-config-prettier": "^9.1.0",
    "formik": "^2.4.6",
    "js-cookie": "^3.0.5",
    "next": "14.2.3",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "react": "^18",
    "react-dom": "^18",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^3.0.0",
    "@faker-js/faker": "^8.4.1",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@playwright/test": "^1.46.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/yup": "^0.32.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-router-mock": "^0.9.13",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^10.0.1",
    "stylelint": "^16.8.1",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5"
  }
}
